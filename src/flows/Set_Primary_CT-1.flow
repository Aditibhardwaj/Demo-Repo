<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <decisions>
        <name>Update_Primary</name>
        <label>Update Primary</label>
        <locationX>603</locationX>
        <locationY>212</locationY>
        <defaultConnectorLabel>[Default Outcome]</defaultConnectorLabel>
        <rules>
            <name>No_Primary_CT</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>PrimaryCTPriority</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Active_CT_to_Primary</targetReference>
            </connector>
            <label>No Primary CT</label>
        </rules>
        <rules>
            <name>Current_Primary_CT_is_lower_Priority</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>ActiveCTPriority</leftValueReference>
                <operator>LessThan</operator>
                <rightValue>
                    <elementReference>PrimaryCTPriority</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Active_CT_to_Primary</targetReference>
            </connector>
            <label>Current Primary CT is lower Priority</label>
        </rules>
    </decisions>
